@{
    ViewData["Title"] = "Đặt hàng thành công";
    var tableCode = Context.Session.GetString("CurrentTableCode");
}

@section Styles {
    <style>
        .success-page {
            padding: 60px 0;
            text-align: center;
            background: #f8f9fa;
            min-height: 70vh;
        }

        .success-icon {
            font-size: 80px;
            color: #28a745;
            margin-bottom: 30px;
        }

        .success-title {
            color: #28a745;
            font-size: 2.5rem;
            margin-bottom: 20px;
            font-weight: bold;
        }

        .success-message {
            font-size: 1.2rem;
            color: #666;
            margin-bottom: 40px;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .order-info {
            background: white;
            padding: 30px;
            border-radius: 10px;
            margin: 30px auto;
            text-align: left;
            max-width: 600px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        }

            .order-info h3 {
                color: #333;
                margin-bottom: 20px;
                border-bottom: 2px solid #28a745;
                padding-bottom: 10px;
            }

            .order-info p {
                margin: 12px 0;
                color: #555;
                font-size: 16px;
            }

            .order-info strong {
                color: #333;
                font-weight: 600;
            }

        .success-actions {
            margin-top: 40px;
        }

        .btn-continue {
            background: #007bff;
            color: white;
            padding: 14px 30px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            margin: 10px;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .btn-continue:hover {
                background: #0056b3;
                color: white;
                text-decoration: none;
                transform: translateY(-2px);
            }

            .btn-continue i {
                margin-right: 8px;
            }

    </style>
}

<div class="success-page">
    <div class="container">
        <!-- SUCCESS ICON -->
        <div class="success-icon">
            <i class="fas fa-check-circle"></i>
        </div>

        <!-- SUCCESS TITLE -->
        <h1 class="success-title">Đặt hàng thành công!</h1>

        <!-- SUCCESS MESSAGE -->
        <p class="success-message">
            Cảm ơn bạn đã đặt hàng tại FoodOrder. Chúng tôi hân hạnh được phục vụ bạn.
        </p>

        <!-- ORDER INFO từ TempData -->
        <div class="order-info">
            <h3><i class="fas fa-receipt"></i> Thông tin đơn hàng</h3>
            <p><strong>Bàn:</strong> @TempData["TableName"]</p>
            <p><strong>Tên:</strong> @TempData["CustomerName"]</p>
            @* <p><strong>Phương thức thanh toán:</strong> @TempData["PaymentMethod"]</p> *@
            <p><strong>Thời gian đặt:</strong> @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</p>
        </div>

        <!-- ACTION BUTTONS -->
        <div class="success-actions">
            <a href="@Url.Action("Index", "Food", new { tableCode })" class="btn-continue">
                <i class="fas fa-utensils"></i> Đặt món khác
            </a>
            <a href="@Url.Action("Index", "Food", new { tableCode })" class="btn-continue">
                <i class="fas fa-utensils"></i> Trạng thái đơn hàng
            </a>
        </div>
    </div>
</div>

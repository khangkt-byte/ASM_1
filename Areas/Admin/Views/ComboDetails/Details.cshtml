@model ASM_1.Models.Food.ComboDetail

@{
    ViewData["Title"] = "Combo Detail Info";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle"></i> Combo Detail Information</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Combo</dt>
                <dd class="col-sm-9">@Model.Combo.ComboName</dd>

                <dt class="col-sm-3 fw-semibold">Food Item</dt>
                <dd class="col-sm-9">@Model.FoodItem.Name</dd>

                <dt class="col-sm-3 fw-semibold">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-comboId="@Model.ComboId" class="btn btn-warning">
                <i class="bi bi-pencil-square"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

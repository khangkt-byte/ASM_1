@model ASM_1.Models.Food.ComboDetail

@{
    ViewData["Title"] = "Delete Combo Detail";
}

<div class="container py-4">
    <div class="card shadow-sm border-danger">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h4>
        </div>
        <div class="card-body">
            <p class="text-danger fw-semibold">Are you sure you want to delete this item?</p>

            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Combo</dt>
                <dd class="col-sm-9">@Model.Combo.ComboName</dd>

                <dt class="col-sm-3 fw-semibold">Food Item</dt>
                <dd class="col-sm-9">@Model.FoodItem.Name</dd>

                <dt class="col-sm-3 fw-semibold">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="ComboDetailId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>
</div>

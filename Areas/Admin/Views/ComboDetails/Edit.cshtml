@model List<ASM_1.Models.Food.ComboDetail>

@{
    ViewData["Title"] = "Edit Combo Details";
}

<div class="container py-4">
    <h2 class="fw-bold text-warning mb-3">
        <i class="bi bi-pencil-square"></i> Edit Combo Details
    </h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow-sm">
        <input type="hidden" name="comboId" value="@ViewBag.ComboId" />

        <div class="mb-3">
            <label class="form-label fw-semibold">Combo</label>
            <div class="input-group">
                <span class="input-group-text bg-primary text-white">
                    <i class="bi bi-box-seam"></i>
                </span>
                <input type="text" class="form-control" value="@Model.FirstOrDefault()?.Combo?.ComboName" readonly />
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Food Item</th>
                        <th style="width:120px;">Quantity</th>
                        <th style="width:80px;" class="text-center">Select</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in (ViewBag.AllFoodItems as List<SelectListItem>) ?? new List<SelectListItem>())
                    {
                        var foodItemId = int.Parse(item.Value);
                        var existing = Model.FirstOrDefault(cd => cd.FoodItemId == foodItemId);
                        bool selected = existing != null;
                        int quantity = existing?.Quantity ?? 1;

                        <tr>
                            <td>@item.Text</td>
                            <td>
                                <input type="number" name="Quantities" value="@quantity" min="1" class="form-control form-control-sm" />
                            </td>
                            <td class="text-center">
                                <div class="form-check form-switch d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedFoodItems" value="@foodItemId"
                                           @(selected ? "checked" : "") />
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-warning">
                <i class="bi bi-save"></i> Save Changes
            </button>
        </div>
    </form>
</div>

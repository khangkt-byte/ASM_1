@model ASM_1.Models.Food.Combo

@{
    ViewData["Title"] = "Create Combo with Details";
}

<div class="container py-4">
    <h2 class="fw-bold text-success mb-3">
        <i class="bi bi-plus-circle"></i> Create Combo
    </h2>

    <form asp-action="Create" enctype="multipart/form-data" method="post" class="card p-4 shadow-sm">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <div class="mb-3">
            <label asp-for="ComboId" class="form-label fw-semibold">Select Combo</label>
            <select asp-for="ComboId" class="form-select" asp-items="ViewBag.ComboId"></select>
        </div>

        <h5 class="fw-semibold mt-4 mb-3">Select Food Items</h5>

        <div class="table-responsive">
            <table class="table table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Food Item</th>
                        <th style="width: 120px;">Quantity</th>
                        <th style="width: 80px;" class="text-center">Select</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.AllFoodItems as SelectList)
                    {
                        var foodItemId = int.Parse(item.Value);
                        <tr>
                            <td>@item.Text</td>
                            <td>
                                <input type="number" name="Quantities" value="1" min="1" class="form-control form-control-sm" />
                            </td>
                            <td class="text-center">
                                <div class="form-check form-switch d-flex justify-content-center">
                                    <input class="form-check-input" type="checkbox"
                                           name="SelectedFoodItems" value="@foodItemId"/>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Save Combo
            </button>
        </div>
    </form>
</div>

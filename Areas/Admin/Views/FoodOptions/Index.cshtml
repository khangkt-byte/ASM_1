@model IEnumerable<ASM_1.Models.Food.FoodOption>

@{
    ViewData["Title"] = "Food Options";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FoodItem)</th>
                        <th>@Html.DisplayNameFor(model => model.OptionName)</th>
                        <th>@Html.DisplayNameFor(model => model.ExtraPrice)</th>
                        <th>@Html.DisplayNameFor(model => model.OptionType)</th>
                        <th>@Html.DisplayNameFor(model => model.IsAvailable)</th>
                        <th>@Html.DisplayNameFor(model => model.StockQuantity)</th>
                        <th class="text-center" style="width:180px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.FoodItem?.Name</td>
                                <td>@item.OptionName</td>
                                <td>@item.ExtraPrice.ToString("N0")</td>
                                <td>@item.OptionType?.TypeName</td>
                                <td>
                                    @if (item.IsAvailable)
                                    {
                                        <span class="badge bg-success">Available</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Unavailable</span>
                                    }
                                </td>
                                <td>@item.StockQuantity</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.FoodOptionId" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.FoodOptionId" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.FoodOptionId" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle"></i> No food options available.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@model ASM_1.Models.Food.FoodOption

@{
    ViewData["Title"] = "Delete Food Option";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-danger text-white d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                    <h4 class="mb-0">Delete Confirmation</h4>
                </div>

                <div class="card-body">
                    <p class="text-danger fw-semibold mb-4">
                        Are you sure you want to delete this food option?
                        This action cannot be undone.
                    </p>

                    <dl class="row">
                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.FoodItem)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FoodItem.Name)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.OptionName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OptionName)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.ExtraPrice)</dt>
                        <dd class="col-sm-8">@Model.ExtraPrice.ToString("C0")</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.OptionType)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.OptionType)</dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.IsAvailable)</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unavailable</span>
                            }
                        </dd>

                        <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(model => model.StockQuantity)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.StockQuantity)</dd>
                    </dl>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="FoodOptionId" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@model ASM_1.Models.Food.Table

@{
    ViewData["Title"] = "Thêm bàn";
}

<h2 class="mb-3">Thêm bàn mới</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post" class="card shadow-sm p-4">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TableName" class="form-label"></label>
                <input asp-for="TableName" class="form-control" />
                <span asp-validation-for="TableName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeatCount" class="form-label"></label>
                <input asp-for="SeatCount" class="form-control" />
                <span asp-validation-for="SeatCount" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

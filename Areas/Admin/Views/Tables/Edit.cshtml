@model ASM_1.Models.Food.Table

@{
    ViewData["Title"] = "Chỉnh sửa bàn";
}

<h2 class="mb-3">Chỉnh sửa thông tin bàn</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post" class="card shadow-sm p-4">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableId" />

            <div class="mb-3">
                <label asp-for="TableName" class="form-label"></label>
                <input asp-for="TableName" class="form-control" />
                <span asp-validation-for="TableName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SeatCount" class="form-label"></label>
                <input asp-for="SeatCount" class="form-control" />
                <span asp-validation-for="SeatCount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DynamicPriceFactor" class="form-label">Hệ số giá động</label>
                <input asp-for="DynamicPriceFactor" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DynamicPriceValidUntil" class="form-label">Hiệu lực đến</label>
                <input asp-for="DynamicPriceValidUntil" type="datetime-local" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="DynamicPriceLabel" class="form-label">Ghi chú giá động</label>
                <input asp-for="DynamicPriceLabel" class="form-control" />
            </div>

            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model IEnumerable<ASM_1.Models.Food.Table>

@{
    ViewData["Title"] = "Danh sách bàn";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">🍽️ Danh sách bàn</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm bàn mới
        </a>
    </div>

    <form asp-action="GenerateAll" method="post" class="mb-3">
        <button class="btn btn-outline-primary">
            <i class="bi bi-qr-code"></i> Tạo QR cho tất cả bàn
        </button>
    </form>

    <table class="table table-hover align-middle shadow-sm rounded">
        <thead class="table-primary">
            <tr class="text-center">
                <th>Tên bàn</th>
                <th>Số ghế</th>
                <th>Trạng thái</th>
                <th>QR</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                var statusClass = table.Status == "Available" ? "text-success fw-bold" : "text-danger fw-bold";
                <tr class="text-center">
                    <td class="fw-semibold">@table.TableName</td>
                    <td>@table.SeatCount</td>
                    <td class="@statusClass">
                        @if (table.Status == "Available")
                        {
                            <i class="bi bi-check-circle-fill">Còn trống</i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle-fill">Đầy</i>
                        }
                    </td>
                    <td>
                        <img src="@Url.Content($"~/uploads/qr/Table_{table.TableId}.png")"
                             alt="QR"
                             width="90"
                             height="90"
                             class="rounded border border-2 shadow-sm" />
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@table.TableId"
                               class="btn btn-sm btn-outline-info">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@table.TableId"
                               class="btn btn-sm btn-outline-warning">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@table.TableId"
                               class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">
            <i class="bi bi-check-circle-fill"></i> @TempData["Success"]
        </div>
    }
</div>

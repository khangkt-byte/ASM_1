@model ASM_1.Models.Food.Table

@{
    ViewData["Title"] = "Chi tiết bàn - " + Model.TableName;
    var mergeGroup = ViewBag.MergeGroup as ASM_1.Services.TableMergeGroupSnapshot;
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Chi tiết bàn: @Model.TableName</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 150px;">Mã bàn:</th>
                            <td>@Model.TableId</td>
                        </tr>
                        <tr>
                            <th>Tên bàn:</th>
                            <td>@Model.TableName</td>
                        </tr>
                        <tr>
                            <th>Sức chứa:</th>
                            <td>@Model.SeatCount</td>
                        </tr>
                        <tr>
                            <th>Trạng thái:</th>
                            <td>
                                @if (Model.Status == "Available")
                                {
                                    <span class="badge bg-success">Trống</span>
                                }
                                else if (Model.Status?.StartsWith("Merged") == true)
                                {
                                    <span class="badge bg-warning text-dark">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Đầy</span>
                                }
                            </td>
                        </tr>
                        @if (mergeGroup != null)
                        {
                            <tr>
                                <th>Nhóm gộp:</th>
                                <td>
                                    Nhóm #@mergeGroup.GroupId - bàn: @string.Join(", ", mergeGroup.TableIds)
                                </td>
                            </tr>
                        }
                    </table>
                </div>

                <div class="col-md-6 text-center">
                    @if (ViewBag.QrExists)
                    {
                        <div>
                            <img src="@ViewBag.QrPath" alt="QR của bàn" width="200" class="border rounded shadow-sm" />
                            <div class="mt-3">
                                <a asp-area="Admin" asp-action="DownloadQR" asp-route-id="@Model.TableId" class="btn btn-success me-2">
                                    <i class="bi bi-download"></i> Tải QR
                                </a>
                                <form asp-action="Refresh" asp-route-id="@Model.TableId" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-arrow-clockwise"></i> Làm mới QR
                                    </button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-secondary">
                            <p class="mb-2">Chưa có mã QR cho bàn này.</p>
                            <form asp-action="Refresh" method="post">
                                <input type="hidden" name="id" value="@Model.TableId" />
                                <button class="btn btn-primary">
                                    <i class="bi bi-qr-code"></i> Tạo QR
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center m-3">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center m-3">
                @TempData["Error"]
            </div>
        }
    </div>
</div>
